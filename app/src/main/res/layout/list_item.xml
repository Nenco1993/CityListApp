<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="@dimen/dimen_75dp"
            android:layout_height="@dimen/dimen_75dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/ivCityPicture"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" android:layout_marginRight="@dimen/dimen_10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvCityName" android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    <ImageView
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp" app:srcCompat="@drawable/arrow_right_grey" android:id="@+id/ivArrow"
            android:layout_margin="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
</LinearLayout>